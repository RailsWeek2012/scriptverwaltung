<%= form_for(@script, :html => { :multipart => true }) do |f| %>
  <%= render :partial => 'shared/error', :locals => {:entity => @script, :text => "dieses Script" } %>

  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :dozent %><br />
    <%= f.text_field :dozent %>
  </div>
  <div class="field">
    <%= f.label :kurs %><br />
    <%= f.text_field :kurs %>
  </div>
  <div class="field">
    <%= f.label :fachrichtung %><br />
    <%= f.text_field :fachrichtung %>
  </div>
  <div class="field">
    <%= f.label :hochschule %><br />
    <%= f.text_field :hochschule %>
  </div>
  <div class="field">
    <%= f.label :beschreibung %><br />
    <%= f.text_area :beschreibung %>
  </div>
  <div class="field">
    <%= f.label :erscheinungsdatum %><br />
    <%= f.date_select :erscheinungsdatum %>
    <br>
    <%= f.file_field :upload %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
<%= link_to 'Show', @script, :class => "btn btn-mini" %>
<%= link_to 'Back', scripts_path, :class => "btn btn-mini" %>


