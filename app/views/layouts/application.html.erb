<!DOCTYPE html>
<html>
    <head>
        <title>Scriptverwaltung</title>
        <%= stylesheet_link_tag    "application", :media => "all" %>
        <%= javascript_include_tag "application" %>
        <%= csrf_meta_tags %>
    </head>
    <body>
        <div class="container">
            <div class="page-header">
                <div class="navbar navbar-fixed-top">
                    <div class="navbar-inner">
                        <div class="container" >
                            <div class="row">
                                <div class="span4"><a class="brand" href="<%= scripts_path %>">Scriptverwaltung</a></div>
                                <div class="span4"> &nbsp; </div>
                                <div class="span4">
                                  <% if user_signed_in? %>
                                      <%= link_to "Logout" , logout_path, :class => "btn btn-mini btn-danger", method: :delete  %>
                                  <% else %>
                                      <%= link_to "Login", login_path, :class => "btn btn-mini btn-info" %>
                                    <% end %>
                                  <%= form_tag scripts_path, :class => "navbar-search pull-right", :method => 'get' do %>                                    
                                    <%= text_field_tag :search, params[:search], :class =>"search-query", :placeholder => "Search"  %>
                                  <% end %>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div id="content">
                <% if flash[:notice] %>
                    <div class="alert alert-info">
                        <button type="button" class="close" data-dismiss="alert">&times;</button>
                        <%= flash[:notice] %>
                    </div>
                <% end %>
                <% if flash[:alert] %>
                    <div class="alert alert-alert">
                        <button type="button" class="close" data-dismiss="alert">&times;</button>
                        <%= flash[:alert] %>
                    </div>
                <% end %>
                <%= yield %>
            </div>
            <div id="footer">
              <br>
              <p>&copy 2012</p>   
            </div>
        </div>
    </body>
</html>
