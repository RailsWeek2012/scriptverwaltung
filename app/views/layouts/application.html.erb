<!DOCTYPE html>
<html>
    <head>
        <title>Scriptverwaltung</title>
        <%= stylesheet_link_tag    "application", :media => "all" %>
        <%= javascript_include_tag "application" %>
        <%= csrf_meta_tags %>
    </head>
    <body>
        <div class="container">
          <%= render 'shared/navbar' %>
            <div id="content">
                <% if flash[:notice] %>
                    <div class="alert alert-info">
                        <button type="button" class="close" data-dismiss="alert">&times;</button>
                        <%= flash[:notice] %>
                    </div>
                <% end %>
                <% if flash[:alert] %>
                    <div class="alert alert-alert">
                        <button type="button" class="close" data-dismiss="alert">&times;</button>
                        <%= flash[:alert] %>
                    </div>
                <% end %>
                <%= yield %>
            </div>
            <div id="footer">
              <br>
              <p>&copy 2012</p>   
            </div>
        </div>
    </body>
</html>
